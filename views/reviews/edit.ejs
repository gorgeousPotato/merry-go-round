<%- include("../partials/header") %>
<h2 class="title"><%=title%></h2>
<div class="reviews-page">
  <% if (user) {%>
    <form action="/reviews/<%= review._id %>?_method=PUT" method="POST" class="review-form">
      <label>Review</label> <br>
      <textarea name="content" rows="2" cols="80" ><%= review.content %></textarea> <br>
      <label>Rating &nbsp;&nbsp;</label>
      <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
      </select> <br>
      <input type="submit" value="Edit Review" class="submit-btn"/>
    </form>
    <% } %>  
</div>

<%- include("../partials/footer") %>