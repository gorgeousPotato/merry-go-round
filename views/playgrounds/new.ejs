<%- include("../partials/header") %>
<a href="/playgrounds" class="back"> ‚ÜêBack </a>
<h1 class="title"><%= title %></h1>
<div class="first-page">
  <form action="/playgrounds" method="POST" class="new-form">
    <label>Name</label>
    <input type="text" name="title" size="40"/>
    <label>Description</label> 
    <textarea name="description" rows="2" cols="40"></textarea> 
    <label>Minumum Age</label>
    <input type="number" min="0" name="minAge" size="40"/>
    <label>Slides</label>
    <input type="checkbox" name="slides" />
    <label>Swings</label>
    <input type="checkbox" name="swings" />
    <label>Sandbox</label>
    <input type="checkbox" name="sandbox" />
    <label>Spraypark</label>
    <input type="checkbox" name="spraypark" />
    <label>Lat - will hide this</label>
    <input type="text" name="lat" id="lat"/>
    <label>Lon - will hide this</label>
    <input type="text" name="lon" id="lon"/>
    <button type="submit" class="submit-btn">SAVE</button>
  </form>
  <div class="all-pg-map">
    <div id="map" style="width: 40rem; height: 30rem"></div>
    <script src="/javascript/map-new.js"></script>
    
</div>


