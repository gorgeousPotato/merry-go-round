<%- include("../partials/header") %>
<h1 class="title"><%= title %></h1>
<div class="first-page">
  <form action="/playgrounds/<%=playground._id%>?_method=PUT" method="POST">
    <label>Name</label>
    <input type="text" name="title" value="<%=playground.title%>" />
    <br />
    <label>Description</label> 
    <textarea name="description" rows="2" cols="40"><%=playground.description%></textarea> 
    <br>
    <label>Minumum Age</label>
    <input type="number" min="0" name="minAge" value="<%=playground.minAge%>"/>
    <br />
    <label>Slides</label>
    <input type="checkbox" name="slides" <%= playground.slides ? "checked" : '' %>/>
    <br />
    <label>Swings</label>
    <input type="checkbox" name="swings" <%= playground.swings ? "checked" : '' %>/>
    <br />
    <label>Sandbox</label>
    <input type="checkbox" name="sandbox" <%= playground.sandbox ? "checked" : '' %>/>
    <br />
    <label>Spraypark</label>
    <input type="checkbox" name="spraypark" <%= playground.spraypark ? "checked" : '' %>/>
    <br />
    <label>Lat - will hide this</label>
    <input type="text" name="lat" id="lat" value="<%=playground.lat%>"/>
    <br />
    <label>Lon - will hide this</label>
    <input type="text" name="lon" id="lon" value="<%=playground.lon%>"/>
    <br />
    <button type="submit">SAVE</button>
  </form>
  <div class="all-pg-map">
    <div id="map" style="width: 30rem; height: 40rem"></div>
    <script src="/javascript/map-new.js"></script>
    
</div>


<%- include("../partials/footer") %>